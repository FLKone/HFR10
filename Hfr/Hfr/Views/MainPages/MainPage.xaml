                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Y" Storyboard.TargetName="ContentTransform">
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="{Binding TemplateSettings.HiddenVerticalDelta, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                            </DoubleAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="VerticalAlignment" Storyboard.TargetName="ExpandButton">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Stretch"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Storyboard.TargetName="HighContrastBorder">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="HiddenOpenDown">
                                        <Storyboard>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Y" Storyboard.TargetName="ClipGeometryTransform">
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="VerticalAlignment" Storyboard.TargetName="ExpandButton">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Stretch"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Storyboard.TargetName="HighContrastBorder">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid x:Name="ContentRoot" Background="{TemplateBinding Background}" Height="{TemplateBinding Height}" Margin="{TemplateBinding Padding}" MinHeight="{ThemeResource AppBarThemeMinHeight}" Opacity="{TemplateBinding Opacity}" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RenderTransform>
                                    <TranslateTransform x:Name="ContentTransform"/>
                                </Grid.RenderTransform>
                                <ContentControl x:Name="ContentControl" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" Content="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" IsTabStop="False" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <Button x:Name="ExpandButton" Grid.Column="1" Foreground="{TemplateBinding Foreground}" MinHeight="{ThemeResource AppBarThemeCompactHeight}" Padding="16,23,16,0" Style="{StaticResource EllipsisButton}" VerticalAlignment="Top" Visibility="Collapsed">
                                    <FontIcon x:Name="EllipsisIcon" FontSize="16" FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE10C;" Height="{ThemeResource AppBarExpandButtonCircleDiameter}" VerticalAlignment="Center"/>
                                </Button>
                                <Rectangle x:Name="HighContrastBorder" Grid.ColumnSpan="2" Stroke="{ThemeResource SystemControlForegroundTransparentBrush}" StrokeThickness="1" Visibility="Collapsed" VerticalAlignment="Stretch" x:DeferLoadStrategy="Lazy"/>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar Style="{StaticResource AppBarStyle1}" ClosedDisplayMode="Compact">

                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                    <AppBarButton x:Name="appBarButton" HorizontalAlignment="Stretch" Icon="Sync" Label="" VerticalAlignment="Stretch" Command="{Binding RefreshDrapsCommand}">

                    </AppBarButton>
                </StackPanel>
                <!--<AutoSuggestBox Grid.Column="1" Width="300" Height="50" HorizontalAlignment="Right"/>-->
        </AppBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="TopicsColumnDefinition" />
            <ColumnDefinition x:Name="TopicContentColumnDefinition" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Background="{ThemeResource SemiDarkBrush}"
              RequestedTheme="Light">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Pivot Grid.Row="0"
                   Background="{StaticResource MainBrush}">
                <PivotItem>
                    <PivotItem.Header>
                        <SymbolIcon Symbol="Favorite"/>

                    </PivotItem.Header>
                    <PivotItem.Content>
                        <Grid>
                            <SemanticZoom ViewChangeCompleted="SemanticZoom_OnViewChangeCompleted">
                                <SemanticZoom.ZoomedInView>
                                    <ListView ItemsSource="{Binding Source={StaticResource DrapsCvs}}"
                                              ItemContainerStyle="{StaticResource HorizontalListViewContainerStyle}"
                                              SelectionMode="None"
                                              IsItemClickEnabled="True"
                                              ItemClick="Drapeaux_ItemClick"
                                              ItemTemplate="{StaticResource FlagItemTemplate}">
                                        <triggers:Interactions.Triggers>
                                            <triggers:EventTrigger EventName="ItemClick">
                                                <triggers:InvokeCommandAction Command="{Binding OpenTopicCommand}"
                                                                              PassEventArgsToCommand="True" />
                                            </triggers:EventTrigger>
                                        </triggers:Interactions.Triggers>
                                        <ListView.GroupStyle>
                                            <GroupStyle HeaderTemplate="{StaticResource CategoriesHeaderTemplate}">
                                                <GroupStyle.HeaderContainerStyle>
                                                    <Style TargetType="ListViewHeaderItem">
                                                        <Setter Property="HorizontalContentAlignment"
                                                                Value="Stretch" />
                                                        <Setter Property="Margin"
                                                                Value="-12,0" />
                                                    </Style>
                                                </GroupStyle.HeaderContainerStyle>
                                            </GroupStyle>
                                        </ListView.GroupStyle>
                                        <ListView.ItemContainerTransitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition />
                                                <AddDeleteThemeTransition />
                                            </TransitionCollection>
                                        </ListView.ItemContainerTransitions>
                                        <ListView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsStackPanel />
                                            </ItemsPanelTemplate>
                                        </ListView.ItemsPanel>
                                    </ListView>
                                </SemanticZoom.ZoomedInView>
                                <SemanticZoom.ZoomedOutView>
                                    <ListView x:Name="DrapsZoomeOutListView"
                                              ItemContainerStyle="{StaticResource HorizontalListViewContainerStyle}"
                                              SelectionMode="None"
                                              IsItemClickEnabled="True">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Group.Key}" />
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ItemContainerTransitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition />
                                            </TransitionCollection>
                                        </ListView.ItemContainerTransitions>
                                        <ListView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsStackPanel />
                                            </ItemsPanelTemplate>
                                        </ListView.ItemsPanel>
                                    </ListView>
                                </SemanticZoom.ZoomedOutView>
                            </SemanticZoom>

                            <StackPanel Visibility="{Binding LoadingScreenDraps}"
                                        VerticalAlignment="Center">
                                <ProgressRing IsActive="True"
                                              Height="100"
                                              Width="100"
                                              Foreground="{StaticResource MainBrush}"
                                              VerticalAlignment="Center"
                                              Margin="0,-50,0,0" />
                                <TextBlock Text="Chargements des topics"
                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                           Margin="0,12,0,0"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </PivotItem.Content>
                </PivotItem>
                <PivotItem>
                    <PivotItem.Header>
                        <SymbolIcon Symbol="List" VerticalAlignment="Center" Margin="0,3,0,0"/>

                    </PivotItem.Header>

                </PivotItem>
                <PivotItem >
                    <PivotItem.Header>
                        <SymbolIcon Symbol="Mail" VerticalAlignment="Center"  Margin="0,3,0,0"/>

                    </PivotItem.Header>
                </PivotItem>
            </Pivot>
            <TextBox x:Name="SearchBox"
                     Grid.Row="1"
                     PlaceholderText="entrez un mot clé ..."
                     Style="{StaticResource BorderlessTextBoxStyle}" />
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Background="{ThemeResource DarkMainBrush}"
                  RequestedTheme="Dark">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Text="{Binding CurrentTopic.TopicName}" />
                <AppBarButton Grid.Column="1"
                              Icon="Add" />
                <AppBarButton Grid.Column="2"
                              Icon="Refresh" />
            </Grid>
            <WebView x:Name="TopicWebView"
                     x:FieldModifier="public"
                     Grid.Row="1" />
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                        <StateTrigger IsActive="{Binding TopicVisible, Converter={StaticResource NegatedBooleanConverter}}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopicsColumnDefinition.Width"
        					Value="*" />
                        <Setter Target="TopicContentColumnDefinition.Width"
        					Value="0" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowTopicVisible">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                        <StateTrigger IsActive="{Binding TopicVisible}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopicsColumnDefinition.Width"
        					Value="0" />
                        <Setter Target="TopicContentColumnDefinition.Width"
        					Value="*" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                        <StateTrigger IsActive="{Binding TopicVisible, Converter={StaticResource NegatedBooleanConverter}}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopicsColumnDefinition.Width"
        					Value="150" />
                        <Setter Target="TopicContentColumnDefinition.Width"
        					Value="*" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
